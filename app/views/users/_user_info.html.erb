<table id="User_info">
  <tr>
    <td>
      <%= gravatar_for @user %>
    </td>
  </tr>
  <tr>
    <td>
      <h3><%= @user.name %></h3>
    </td>
  </tr>
  <tr>
    <td><%= t 'posts.index.posts'%>: <%= pluralize(@user.posts.count, 'posts') %></td>
  </tr>
  <tr>
    <td><%= t 'posts.index.comments'%>: <%= pluralize(@user.comments.count, 'comment') %></td>
  </tr>
  <tr>
    <td>
      <% if logged_in? %>
          <%= link_to (t 'posts.index.new_post'), new_post_path, id: 'new_post_link', remote: true %>
      <% end %>
    </td>
  </tr>
</table>
