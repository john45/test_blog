<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to (t 'layouts.application.blog'), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to (t "layouts.application.home"), home_path %></li>
        <li><%= link_to (t 'layouts.application.help'), help_path %></li>
        <% if logged_in? %>
            <li><%= link_to (t 'layouts.application.users'), '#' %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t 'layouts.application.account' %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to (t 'layouts.application.profile'), current_user %></li>
                <li><%= link_to (t 'layouts.application.settings'), '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to (t 'layouts.application.logout'), logout_path, method: "delete" %>
                </li>
              </ul>
            </li>

        <% else %>
            <li><%= link_to (t 'layouts.application.login'), login_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t 'layouts.application.language' %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "English", english_path, locale: 'en' %></li>
            <li><%= link_to "Русский", russian_path, locale: 'ru' %></li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>